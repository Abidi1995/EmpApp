@model EmpApp.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h2 class="jumbotron" ><u>ADD NEW EMPLOYEE</u></h2>
<hr />
<div class="row py-3">
    <div class="col-md-4 ">
        <form asp-action="Create" >

            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label"></label>
                <input asp-for="EmployeeName" class="form-control" />
                <span asp-validation-for="EmployeeName" class="text-primary"/>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input type="text" asp-for="City" class="form-control" />

                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateofHiring" class="control-label"></label>
                <input asp-for="DateofHiring" class="form-control" />
                <span asp-validation-for="DateofHiring" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateofBirth" class="control-label"></label>
                <input asp-for="DateofBirth" class="form-control" />
                <span asp-validation-for="DateofBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-block success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="EmployeeList" class="btn btn-danger">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
